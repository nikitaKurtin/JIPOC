<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ttl"
        android:layout_alignParentStart="true"
        style="@style/customTxt"
        android:layout_width="wrap_content"
        android:text="@string/your_key"
        />

    <TextView
        android:id="@+id/randKey"
        android:layout_toEndOf="@id/ttl"
        style="@style/customTxt"
        android:textStyle="bold"
        android:paddingStart="@dimen/bigPadding"
        />

    <EditText
        android:id="@+id/inputKey"
        android:layout_below="@id/randKey"
        style="@style/customTxt"
        android:layout_width="match_parent"
        android:hint="@string/key_of_your_peer"
        />


</RelativeLayout>